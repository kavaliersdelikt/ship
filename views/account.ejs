<%- include('./components/layout') %>

<main class="flex-grow container mx-auto px-4 py-12">
    <div class="text-center mb-16">
        <h1 class="text-4xl font-black text-white tracking-tight">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-gray-100 to-gray-500">
                Account Settings
            </span>
        </h1>
        <p class="text-gray-500 mt-2 text-sm font-medium">Manage your account details and security</p>
    </div>

    <div class="max-w-4xl mx-auto">
        <div class="bg-black/40 backdrop-blur-sm border border-white/5 rounded-2xl p-8 mb-8">
            <div class="flex flex-col md:flex-row items-center gap-6 mb-8">
                <div class="w-32 h-32 rounded-full bg-gradient-to-br from-gray-800 to-gray-900 flex items-center justify-center border border-white/10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                </div>
                
                <div class="flex-1 text-center md:text-left">
                    <h1 class="text-2xl font-bold text-white mb-2"><%= req.session.userinfo.username %></h1>
                    <p class="text-gray-500"><%= req.session.userinfo.email %></p>
                </div>

                <div class="flex flex-col sm:flex-row gap-3">
                    <button id="userAddress" class="inline-flex items-center justify-center px-4 py-2 bg-black/40 border border-white/10 hover:bg-white/10 rounded-lg text-white transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                        <%= req.session.userinfo.id %>
                    </button>
                    
                    <button onclick="logout()" class="inline-flex items-center justify-center px-4 py-2 bg-red-900/20 hover:bg-red-900/30 text-red-400 rounded-lg transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                        </svg>
                        Logout
                    </button>
                </div>
            </div>
        </div>

        <div class="bg-black/40 backdrop-blur-sm border border-white/5 rounded-2xl p-8">
            <h2 class="text-xl font-bold text-white mb-6">Password Management</h2>
            
            <form id="password-change-form" class="space-y-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label class="text-sm font-medium text-gray-400">New Password</label>
                        <input type="password" 
                               id="new-password"
                               class="w-full bg-black/40 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:ring-1 focus:ring-white/20 focus:border-white/20"
                               placeholder="Enter new password">
                    </div>

                    <div class="space-y-2">
                        <label class="text-sm font-medium text-gray-400">Confirm Password</label>
                        <input type="password"
                               id="confirm-password"
                               class="w-full bg-black/40 border border-white/10 rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:ring-1 focus:ring-white/20 focus:border-white/20"
                               placeholder="Confirm new password">
                    </div>
                </div>

                <div class="bg-black/40 border border-white/5 rounded-xl p-6">
                    <h4 class="text-sm font-semibold text-white mb-3">Password Requirements</h4>
                    <ul class="grid grid-cols-1 md:grid-cols-2 gap-2 text-sm text-gray-500">
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Minimum 8 characters
                        </li>
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            One uppercase letter
                        </li>
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            One lowercase letter
                        </li>
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            One number
                        </li>
                    </ul>
                </div>

                <div class="flex flex-col sm:flex-row gap-4">
                    <button type="button" 
                            onclick="window.location.href='../regen'"
                            class="flex-1 px-6 py-3 bg-white/5 border border-white/10 text-white rounded-lg font-medium hover:bg-white/10 transition-colors">
                        Generate Random Password
                    </button>
                    <button type="submit"
                            class="flex-1 px-6 py-3 bg-white/5 border border-white/10 text-white rounded-lg font-medium hover:bg-white/10 transition-colors">
                        Update Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</main>

<script>
    document.getElementById('userAddress').addEventListener('click', function() {
        const text = this.textContent.trim();
        navigator.clipboard.writeText(text).then(() => {
            const originalContent = this.innerHTML;
            this.innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Copied!
            `;
            setTimeout(() => {
                this.innerHTML = originalContent;
            }, 2000);
        });
    });

    function showStatus(message, type) {
        const toast = document.createElement('div');
        toast.className = `fixed bottom-4 right-4 flex items-center ${
            type === 'success' ? 'bg-emerald-900/20 text-emerald-500' : 'bg-red-900/20 text-red-500'
        } px-6 py-3 rounded-xl shadow-lg transform transition-all duration-300 opacity-0 translate-y-2 border ${
            type === 'success' ? 'border-emerald-900/20' : 'border-red-900/20'
        }`;
        
        const icon = type === 'success' 
            ? '<svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>'
            : '<svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>';
            
        toast.innerHTML = icon + message;
        document.body.appendChild(toast);
        
        requestAnimationFrame(() => {
            toast.classList.remove('opacity-0', 'translate-y-2');
        });
        
        setTimeout(() => {
            toast.classList.add('opacity-0', 'translate-y-2');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    function logout() {
        window.location.href = '/logout';
    }

    document.getElementById('password-change-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const newPassword = document.getElementById('new-password').value;
        const confirmPassword = document.getElementById('confirm-password').value;

        try {
            const response = await fetch('/api/password/change', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    password: newPassword,
                    confirmPassword: confirmPassword
                })
            });

            const data = await response.json();

            if (response.ok) {
                showStatus('Password updated successfully!', 'success');
                setTimeout(() => window.location.reload(), 1500);
            } else {
                showStatus(data.error, 'error');
            }
        } catch (error) {
            showStatus('An error occurred while updating the password.', 'error');
        }
    });
</script>

<%- include('./components/page-scripts') %>
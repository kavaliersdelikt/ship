document.addEventListener('DOMContentLoaded', function() {
    const currentPath = window.location.pathname;
    const mobileMenuButton = document.getElementById('mobile-menu-btn');
    const menuItems = document.getElementById('menu-items');
    const moreMenuButton = document.getElementById('more-menu-button');
    const moreMenuContent = document.getElementById('more-menu-content');
    
    document.querySelectorAll('.nav-link').forEach(link => {
        const href = link.getAttribute('href')?.split('?')[0];
        if (href && currentPath.includes(href)) {
            link.classList.add('bg-indigo-500/20', 'text-indigo-300');
        }
    });

    mobileMenuButton?.addEventListener('click', () => {
        menuItems.classList.toggle('hidden');
    });

    let closeTimeout;

    document.addEventListener('click', (event) => {
        const isClickInMoreMenu = event.target.closest('#more-menu-button, #more-menu-content');
        const isClickInMobileMenu = event.target.closest('#mobile-menu-btn, #menu-items');

        if (!isClickInMoreMenu && isMoreMenuOpen) {
            closeMoreMenu();
        }

        if (!isClickInMobileMenu && !menuItems?.classList.contains('hidden') && window.innerWidth < 768) {
            menuItems?.classList.add('hidden');
        }
    });
});
</script>